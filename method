import java.util.Scanner;

// Base class
abstract class Shape {
    // Abstract method to be implemented by subclasses
    abstract double calcArea();
}

// Circle class
class Circle extends Shape {
    private double radius;
    
    // Constructor
    public Circle(double radius) {
        this.radius = radius;
    }
    
    @Override
    double calcArea() {
        return Math.PI * radius * radius;
    }
}

// Triangle class
class Triangle extends Shape {
    private double base;
    private double height;
    
    // Constructor
    public Triangle(double base, double height) {
        this.base = base;
        this.height = height;
    }
    
    @Override
    double calcArea() {
        return 0.5 * base * height;
    }
}

// Rectangle class
class Rectangle extends Shape {
    private double length;
    private double width;
    
    // Constructor
    public Rectangle(double length, double width) {
        this.length = length;
        this.width = width;
    }
    
    @Override
    double calcArea() {
        return length * width;
    }
}

 class ShapeCalculator {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        // Input dimensions for Circle
        System.out.print("Enter radius for the circle: ");
        double radius = scanner.nextDouble();
        
        // Input dimensions for Rectangle
        System.out.print("Enter length for the rectangle: ");
        double length = scanner.nextDouble();
        System.out.print("Enter width for the rectangle: ");
        double width = scanner.nextDouble();
        
        // Input dimensions for Triangle
        System.out.print("Enter base for the triangle: ");
        double base = scanner.nextDouble();
        System.out.print("Enter height for the triangle: ");
        double height = scanner.nextDouble();
        
        // Create objects of each shape
        Shape circle = new Circle(radius);
        Shape rectangle = new Rectangle(length, width);
        Shape triangle = new Triangle(base, height);
        
        // Calculate and display areas
        System.out.println("Area of the circle: " + circle.calcArea());
        System.out.println("Area of the rectangle: " + rectangle.calcArea());
        System.out.println("Area of the triangle: " + triangle.calcArea());
        
        scanner.close();
    }
}
